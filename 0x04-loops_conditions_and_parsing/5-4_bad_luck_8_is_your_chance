#!/usr/bin/env bash
# This script displays different messages for loop iterations 4 and 8, and "Best School" for all others.

# 1. Initialize the counter, starting at 1
COUNT=1

# 2. Start the while loop (runs for iterations 1 through 10)
while [ $COUNT -le 10 ]
do
    # 3. Start the IF-ELIF-ELSE structure
    if [ $COUNT -eq 4 ]; then
        # Condition 1: If the iteration is 4
        echo "bad luck"
    elif [ $COUNT -eq 8 ]; then
        # Condition 2: If the iteration is 8
        echo "good luck"
    else
        # Default Case: For all other iterations (1, 2, 3, 5, 6, 7, 9, 10)
        echo "Best School"
    fi

    # 4. Increment the counter
    COUNT=$((COUNT + 1))
done
